extends layout

block content
  h1= title
  p Welcome, #{title}
  button(type="button" class="btn btn-warning" onclick="update()") Press me
  div(id="target") Display
    script.  
      var client_count=0 
      function update(){
        client_count ++;
        document.getElementById("target").innerHTML = `Value now ${client_count}`
      }
  a(href='/mango') Eat my Tasty Mangoes